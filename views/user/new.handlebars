<form class="user-form" method="POST" action="/users">
    <div class="ui two column centered grid">
        <div class="column">
            <div class="ui big form">
                <div class="one fields">
                    <div class="required ten wide field">
                        <label>Username</label>
                        <input placeholder="Username" type="text" name="name">
                    </div>
                </div>
            </div>
            <div class="two column centered row">
                <div class="column">
                    <div class="ui big form">
                        <div class="one fields">
                            <div class="required ten wide field">
                                <label>Email</label>
                                <input placeholder="Email" type="email" name="email">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="two column centered row">
                <div class="column">
                    <div class="ui big form">
                        <div class="one fields">
                            <div class="required ten wide field">
                                <label>Password</label>
                                <input placeholder="Password" type="password" name="password">{{#if passworderror}}
                                {{passworderror}}
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="two column centered row">
                <div class="column">
                    <div class="ui big form">
                        <div class="one fields">
                            <div class="required ten wide field">
                                <label>Confirm Password</label>
                                <input placeholder="Confirm Password" type="password" name="confirmedpassword">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="two column centered row">
                    <div class="column">
                        <button class="positive ui button">Register</button>
                    </div>
                </div>
            </div>
        </div>
</form>