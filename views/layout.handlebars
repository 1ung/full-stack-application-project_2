    <title>Thirsty</title>
</head>

<body>
    <div class="ui right menu">
        <div class="right menu">
            <a href="/" class="item">
                Home
            </a>
            {{#if loggedIn}}
            <a href="/users/{{userid}}/profile" class="item">
                Profile
            </a>
            <div class="item">
                <form method="POST" action="/users/logout">
                    <button class="negative ui button">Logout</button>
                </form>
            </div>
            {{else}}

            <a href="/users/login" class="ui green active item">Login</a>

            <div class="item">
                <form action="/users/new">
                    <button class="ui primary button">Register</button>
                </form>
            </div>
            {{/if}}
        </div>
    </div>
